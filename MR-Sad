	 echo -e "\e[91m------------------------------------------------------"
         echo
fi

if [ "$CANCION" == "https://www.youtube.com/watch?v=V5YOhcAof8I" ]
then
	echo 
	 echo -e "\e[91m------------------------------------------------------"
       	echo -e "\e[1mThis was: The Trip - Still Corners" | lolcat
	 echo -e "\e[91m------------------------------------------------------"
